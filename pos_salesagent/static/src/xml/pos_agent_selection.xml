<?xml version="1.0" encoding="UTF-8"?>
<template id="template" xml:space="preserve">

    <t t-name="AgentSelectionButton">
        <div class='control-button in_note'>
            <i class="fa fa-user-plus">Add Sales Agent</i>
        </div>
    </t>

    <t t-name="AgentPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-note">
                <p class="title"><t t-esc=" widget.options.title || 'Select Sales Agent' " /></p>
                 <select id="employee_select" style="width:461px;" class="employee_select">
                    <option id="" value="select"></option>
                </select>
                <div class="footer">
                    <button class="button confirm">
                        Select
                    </button>
                    <button class="button cancel">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </t>
