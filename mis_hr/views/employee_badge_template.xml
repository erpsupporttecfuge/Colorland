<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="custom_employee_badge_paper_format" model="report.paperformat">
            <field name="name">Employee Badge A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">2</field>
            <field name="margin_bottom">2</field>
            <field name="margin_left">2</field>
            <field name="margin_right">2</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <report
                id="custom_employee_badge"
                model="hr.employee"
                string="Employee Badge"
                report_type="qweb-pdf"
                name="mis_hr.employee_badge_template"
                file="mis_hr.employee_badge_template"
                paperformat="mis_hr.custom_employee_badge_paper_format"
                menu="True"
        />

        <template id="employee_badge_template">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <t t-if="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id"/>
                    </t>
                    <t t-if="not o or not 'company_id' in o">
                        <t t-set="company" t-value="res_company"/>
                    </t>
                    <div class="page">

                        <div style="position: absolute;opacity: 20.25;z-index: 1000;width: 150%;">
                            <img t-if="company.custom_back" t-att-src="'data:image/jpg;base64,%s' % to_text(company.custom_back)"
                                 style="top:0px;position:absolute;width:67%;opacity:0.85;z-index:-1000;"
                                 height="1800px">
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <table width="100%">
                                    <tr>
                                        <td width="20%">&amp;nbsp;</td>
                                        <td colspan="2" width="80%" align="left" style="padding-left:150px;">
                                            <img t-if="company.logo"
                                                 t-att-src="'data:image/png;base64,%s' % to_text(o.image_1920)"
                                                 width="300px" height="350px"/>
                                        </td>
                                        <!--<td width="%">&amp;nbsp;</td>-->
                                    </tr>
                                </table>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <table width="100%">
                                    <tr>
                                        <td width="20%">&amp;nbsp;</td>
                                        <td align="left" width="50%"
                                            style="font-size:45px; font-weight:bold; padding-left:40px;">
                                            <span t-field="o.name"/>
                                        </td>
                                        <td width="30%">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="3">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="20%">&amp;nbsp;</td>
                                        <td align="left" width="50%" style="font-size:45px; padding-left:130px;">
                                            <span t-field="o.job_id.name"/>
                                        </td>
                                        <td width="30%">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="3">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="3">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="3">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="3">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="3">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="3">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="3">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="3">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="20%">&amp;nbsp;</td>
                                        <td width="70%" style="font-size:45px; padding-left:40px;" colspan="2">
                                            <span>ID Number:</span>&amp;nbsp;
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="3">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="20%">&amp;nbsp;</td>
                                        <td width="70%" style="font-size:45px; padding-left:40px;" colspan="2">
                                            <span>Blood Group:</span>&amp;nbsp;
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="3">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="20%">&amp;nbsp;</td>
                                        <td width="70%" style="font-size:45px; padding-left:40px;" colspan="2">
                                            <span>PH:</span>&amp;nbsp;
                                            <span t-field="o.phone"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="3">&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td width="20%">&amp;nbsp;</td>
                                        <td width="70%" colspan="2">
                                            <img alt="barcode"
                                                 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.barcode, 600, 120)"
                                                 style="max-height:50pt;max-width:150%;"/>
                                        </td>
                                    </tr>
                                </table>
                            </img>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
