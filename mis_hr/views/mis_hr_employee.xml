<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mis_hr_employee_form_inherit" model="ir.ui.view">
           <field name="name">HR Employee Form Inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='visa_no']" position="before">
                    <field name="joining_date"/>
                </xpath>
                <xpath expr="//field[@name='permit_no']" position="replace">
                    <field name="visa_issued_date"/>
                </xpath>
                <xpath expr="//field[@name='visa_expire']" position="after">
                    <field name="permit_no"/>
                    <field name="work_issued_date"/>
                    <field name="work_expiry_date"/>
                    <field name="insurance_no"/>
                    <field name="insurance_issued_date"/>
                    <field name="insurance_expiry_date"/>
                </xpath>

                 <xpath expr="//field[@name='passport_id']" position="after">
                    <field name="passport_issued_date"/>
                     <field name="passport_expiry_date"/>
                </xpath>
                <xpath expr="//field[@name='pin']" position="after">
                     <field name="custom_back" widget="image"/>
                </xpath>
            </field>
        </record>
        
        <record id="inherit_view_company_form" model="ir.ui.view">
           <field name="name">HR Employee Form Inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="after">
                     <field name="custom_back" widget="image"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
