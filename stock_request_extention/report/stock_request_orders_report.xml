<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <report
        string="Request Order"
        id="action_report_stock_request_order"
        model="stock.request.order"
        report_type="qweb-pdf"
        name="stock_request_extention.report_stock_request_order"
        file="stock_request_extention.report_stock_request_order"
    />

    <template id="report_stock_request_order">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">

                    <div class="page">
                        <h2 class="text-center">
                            Stock Request
                        </h2>
                        <div class="row col-12">
                            <div class="col-6">
                                <h2>
                                    <span t-field="o.name"/>
                                </h2>
                            </div>
                            <div class="col-6">
                                <h4 >
                                    Route: <span t-field="o.route_id"/>
                                </h4>
                            </div>
                          
                        </div>


                        <div class="row mt32 mb32">
                            <div class="col-auto" name="div_origin">
                                <strong>Order:</strong>
                                <p t-field="o.name"/>
                            </div>
                            <div class="col-auto" name="div_sched_date">
                                <strong>Expected Date:</strong>
                                <p t-field="o.expected_date"/>
                            </div>
                            <div class="col-auto" name="div_origin">
                                <strong>Type :</strong>
                                <p t-field="o.request_type.name"/>
                            </div>
                            <div class="col-auto" name="div_sched_date">
                                <strong>From:</strong>
                                <p t-field="o.location_id.name"/>
                            </div>
                            <div class="col-auto" name="div_sched_date">
                                <strong>To:</strong>
                                <p t-field="o.to_location_id.name"/>
                            </div>
                        </div>

                        <div class="row mt32 mb32">
                            <div class="col-auto" name="div_origin">
                                <strong>Remarks:</strong>
                                <p t-field="o.remarks"/>
                            </div>

                        </div>

                        <table class="table table-sm" name="stock_move_table">
                            <thead>
                                <tr>
                                    <th name="th_sm_product"><strong>Product</strong></th>
                                    <th name="th_sm_quantity"><strong>Quantity</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.stock_request_ids" t-as="request">
                                    <td>
                                        <span t-field="request.product_id"/>
                                    </td>
                                    <td>
                                        <span t-field="request.product_uom_qty"/>
                                        <span t-field="request.product_uom_id"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
             </t>
        </t>
    </template>
</odoo>
