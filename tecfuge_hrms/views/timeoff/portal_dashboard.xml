<odoo>

    <template id="portal_timeoff_cards">
        <div class="bg-light" style="width: 18rem;height:10rem;text-align:center">

<br></br>
            <img  t-att-src="summary[1]['icon']" style="width:60px;height:60px"></img>
            <h4><t t-esc="summary[0]"></t></h4>
            <h7><t t-esc="summary[1]['virtual_remaining_leaves']"></t>


            </h7>
  </div>

    </template>

    <template id="portal_timeoff_dashboard">


        <div class="container">
  <div class="row">

      <t t-foreach="time_off_summary" t-as="summary">
           <div class="col-sm ">
<t t-call="tecfuge_hrms.portal_timeoff_cards"></t>
    </div>
      </t>

  </div>

            <br></br>
</div>
    </template>
</odoo>