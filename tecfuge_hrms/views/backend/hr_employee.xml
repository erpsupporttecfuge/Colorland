<odoo>


    <record id="hr_employee_view_form_inherit_documents" model="ir.ui.view">
        <field name="name">hr.employee.view.form.documents</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='public']" position="after">

                <page string="Document" name="document">


                    <field name="documents_ids">
                        <tree editable="bottom" create="1" delete="1" edit="1">
                            \
                            <field name="document_type_id"></field>
                            <field name="attachment_id" widget="many2many_binary"></field>
                            <field name="date_of_expire"></field>
                            <field name="status"></field>
                        </tree>

                    </field>
                </page>

            </xpath>
        </field>
    </record>


