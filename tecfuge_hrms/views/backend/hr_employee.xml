        <field name="name">res.document.tree</field>
        <field name="model">res.document</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="employee_id"></field>
                        <field name="document_type_id"></field>
                        <field name="date_of_expire"></field>
                    </group>
                </group>

                <group>
                    <field name="attachment_id" string="Attach a file" widget="many2many_binary"></field>
                    <field name="status"></field>

                </group>


            </form>
        </field>
    </record>


